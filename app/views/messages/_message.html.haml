.cntent-center-ajax{'data-message_id': message.id}
  %p.cntent-center-ajax__members-nickname
    = message.user.nickname
  %p.cntent-center-ajax__comment-time
    = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
  %p.cntent-center-ajax__comment
    = message.body
  .cntent-center-ajax__image
    = image_tag(message.image)
